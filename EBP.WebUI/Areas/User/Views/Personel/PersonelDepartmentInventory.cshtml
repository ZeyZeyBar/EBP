@model IEnumerable<PersonelDepartmentInventoryDto>
@{
    ViewData["Title"] = "PersonelDepartmentInventory";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}


@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Personelin Departman Envanter  Bilgileri</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col">Malzeme Kodu</th>
                            <th scope="col">Malzeme Adı</th>
                            <th scope="col">Miktarı</th>
                            <th scope="col">Markası</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.MaterialCode</th>
                                <td>@item.MaterialTypeName</td>
                                <td>@item.Count</td>
                                <td>
                                    @item.BrandName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}