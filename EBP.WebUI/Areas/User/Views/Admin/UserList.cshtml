@model IEnumerable<RolDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/User/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
    <a asp-area="User" asp-controller="Admin" asp-action="UserAdd" asp-route-id="@Model" class="btn btn-success">Uygulamaya Kullanıcı Ekle</a>
}
else
{
     <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Uygulama Kullanıcıları Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="mt-2"><a asp-area="User" asp-controller="Admin" asp-action="UserAdd" asp-route-id="@Model" class="btn btn-success mt-2">Uygulamaya Kullanıcı Ekle</a></tr>
                        <tr></tr>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">Kullanıcı Soyadı</th>
                            <th scope="col">Personel Adı ve Soyadı</th>
                            <th scope="col">Rolü</th>
                            <th scope="col">Düzenleme</th>
                            <th scope="col">Silme</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.ID</th>
                                <td>@item.UserName</td>
                                <td>@item.LastName</td>
                                <td>@item.PersonelFullName</td>
                                <td>@item.RolTypes</td>

                                <td><a asp-area="User" asp-controller="Admin" asp-action="UserUpdate" asp-route-id="@item.ID" class="btn btn-warning">Kullanıcı Düzenle</a></td>


                                <td><a asp-area="User" asp-controller="Admin" asp-action="UserDelete" asp-route-id="@item.ID" class="btn btn-danger">Kullanıcı Silme</a></td>
                            </tr>
                        }
                    <td style="font-family:'Times New Roman', Times, serif; font-style:initial;font-size:medium ">Toplam Kullanıcı Sayısı : @Model.Count()</td>
                    </tbody>
                </table>
                </div>
                </div>
                </div>


