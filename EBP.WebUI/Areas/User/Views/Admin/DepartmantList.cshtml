@model IEnumerable<Department>
@{
    ViewData["Title"] = "DepartmantList";
    Layout = "~/Areas/User/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Departman Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr><a asp-area="User" asp-controller="Admin" asp-action="DepartmentAdd" asp-route-id="@Model" class="btn btn-success">Departman Ekle</a></tr>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Departman Adı</th>
                            <th scope="col">Düzenleme</th>
                            <th scope="col">Silme</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.ID</th>
                                <td>@item.DepartmentName</td>
                                <td><a asp-area="User" asp-controller="Admin" asp-action="DepartmentUpdate" asp-route-id="@item.ID" class="btn btn-warning">Departman Düzenle</a></td>
                                <td><a asp-area="User" asp-controller="Admin" asp-action="DepartmentDelete" asp-route-id="@item.ID" class="btn btn-danger">Departman Silme</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

