@model IEnumerable<PersonelListDto>

@{
    ViewData["Title"] = "PersonelList";
    Layout = "~/Areas/User/Views/Shared/_AdminLayout.cshtml";
}
<h1>Personel Listesi</h1>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        Kayıt Bulunamadı..!
    </div>
}
else
{

    <table class="table table-striped">
        <thead>
            <tr><a asp-area="User" asp-controller="Admin" asp-action="PersonelAdd" asp-route-id="@Model" class="btn btn-success">Personel Ekle</a></tr>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Kayıt Numarası</th>
                <th scope="col">Personel Adı</th>
                <th scope="col">Personel Soyadı</th>
                <th scope="col">Departman Adı</th>
                <th scope="col">Personel Doğum Tarihi</th>
                <th scope="col">Personel Adresi</th>
                <th scope="col">Düzenleme</th>
                <th scope="col">Silme</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                  <th scope="row">@item.ID</th>
                    <td>@item.RegisterNo</td>
                    <td>@item.PersonelName</td>
                    <td>@item.PersonelLastName</td>
                    <td>@item.DepartmentNAME</td>
                    <td>@item.PersonelBirthDay</td>
                    <td>@item.PersonelAddress</td>

                    <td><a asp-area="User" asp-controller="Admin" asp-action="PersonelUpdate" asp-route-id="@item.ID" class="btn btn-warning">Personel Düzenle</a></td>
                    <td><a asp-area="User" asp-controller="Admin" asp-action="PersonelDelete" asp-route-id="@item.ID" class="btn btn-danger">Personel Silme</a></td>
                </tr>
            }
        </tbody>
    </table>
}