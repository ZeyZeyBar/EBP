@model Department
@{
    ViewData["Title"] = "DepartmentUpdate";
    Layout = "~/Areas/User/Views/Shared/_AdminLayout.cshtml";
}


@if (ViewBag.DepartmentUpdateError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.DepartmentUpdateError
    </div>
}
else
{

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Departman Tipi Güncelleme</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <form asp-area="User" asp-controller="Admin" asp-action="DepartmentUpdate" method="post">
                    <div class="form-group">
                        <input type="hidden" name="ID" value="@Model.ID" />
                    </div>
                    <div class="form-group">
                        <label for="brandName">Departman Adını Giriniz</label><br />
                        <br />

                        <input type="text" name="DepartmentName" value="@Model.DepartmentName" placeholder="Departman Adı Giriniz" /><br /><br />
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
                <div class="mt-3">
                    <a asp-area="User" asp-controller="Admin" asp-action="DepartmantList" class="btn btn-secondary">Listeye Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
}